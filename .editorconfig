# EditorConfig helps maintain consistent coding styles across various editors
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# Python files
[*.py]
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.sh]
indent_size = 2

# Dockerfiles
[Dockerfile*]
indent_size = 4

# Makefiles (require tabs)
[Makefile]
indent_style = tab

# Configuration files
[*.{toml,ini,cfg}]
indent_size = 4

# GitHub Actions
[.github/**/*.yml]
indent_size = 2
